{erl_opts, [debug_info]}.

{erl_first_files, ["src/counter_trans.erl"]}.

{deps, [
   {cli, {git, "https://github.com/terry-xiaoyu/erlang-cli.git", {branch, "master"}}},
   {uuid, {git, "https://github.com/okeuday/uuid", {tag, "v1.8.0"}}},
   {lwm2m_coap, {git, "https://github.com/emqx/lwm2m-coap", {tag, "v1.0.2"}}},
   {jsx, {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.10.0"}}},
   {getopt, "1.0.1"},
   {emqtt, {git, "https://github.com/emqx/emqtt", {tag, "v1.0.0"}}}
]}.

{relx, [{release, {coap_bench, "0.1.0"},
         [coap_bench,
          syntax_tools,
          {observer, load},
          runtime_tools,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {include_erts, true},
        {extended_start_script, false},
        {generate_start_script, false},
        {overlay_vars,["vars.config"]},
        {overlay,
           [{mkdir,"log/"},
            {mkdir,"bin/"},
            {mkdir,"data/"},
            {copy,"config/client_info.csv","data/client_info.csv"},
            {copy,"config/workflow_lwm2m_1.json","data/workflow_lwm2m_1.json"},
            {copy,"config/workflow_lwm2m_2.json","data/workflow_lwm2m_2.json"},
            {copy,"config/workflow_lwm2m_3.json","data/workflow_lwm2m_3.json"},
            {copy,"config/workflow_mqtt_1.json","data/workflow_mqtt_1.json"},
            {copy,"bin/nodetool","bin/nodetool"},
            {template,"bin/coap_bench","bin/coap_bench"},
            {template,"bin/mqtt_bench","bin/mqtt_bench"}
           ]}
        ]
}.

